generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Test {
  id Int @id
  name String
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}

enum ProblemDifficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String       @id @default(uuid())
  clerkId  String  @unique
  username      String?      @unique
  email     String       @unique
  role      UserRole     @default(USER)

  firstName String?
  lastName  String?
  imageUrl  String?

  problems  Problem[]

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([role])
}

model Problem {
  id        String       @id @default(uuid()) 
  title     String
  description String
  difficulty  ProblemDifficulty
  tags      String[]

  userId String
  examples Json
  constraints String
  hint String?
  editor String?

  testCases Json
  codeSnippet String?
  referenceSolution Json

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}